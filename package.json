  "scripts": {
    "build": "npm run build:js && relaxed pages/intro.html --build-once",
    "dev": "nodemon --exec npm run build",
    "build:js": "webpack --config webpack.config.js",
    "serve": "npm run build:js & serve"
  },
  "dependencies": {
    "moment": "^2.27.0",
    "polymer": "^0.5.0",
    "relaxedjs": "^0.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "hard-source-webpack-plugin": "^0.13.1",
    "nodemon": "^2.0.4",
    "serve": "^11.3.2",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "nodemon": {
    "ignore": [
      "out/*",
      "node-modules/*",
      ".awcache/*",
      ".gitignore"
    ],
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "exec": "npm run build"
  }
}
